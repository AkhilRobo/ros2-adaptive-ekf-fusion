<?xml version="1.0" ?>
<robot name="antarctic_bot">

  <material name="blue"><color rgba="0 0 0.8 1"/></material>
  <material name="black"><color rgba="0 0 0 1"/></material>
  <material name="white"><color rgba="1 1 1 1"/></material>
  <material name="orange"><color rgba="1 0.5 0 1"/></material>
  <material name="red"><color rgba="1 0 0 1"/></material>
  <material name="green"><color rgba="0 1 0 1"/></material>
  <material name="violet"><color rgba="0.5 0 1 1"/></material>

  <link name="base_link">
    <visual>
      <geometry><box size="0.5 0.3 0.1"/></geometry>
      <material name="green"/>
    </visual>
    <collision>
      <geometry><box size="0.5 0.3 0.1"/></geometry>
    </collision>
    <inertial>
      <mass value="5.0"/>
      <inertia ixx="0.041" ixy="0.0" ixz="0.0" iyy="0.108" iyz="0.0" izz="0.141"/>
    </inertial>
  </link>

  <link name="right_wheel">
    <visual>
      <geometry><cylinder length="0.05" radius="0.1"/></geometry>
      <material name="white"/>
    </visual>
    <collision>
      <geometry><cylinder length="0.05" radius="0.1"/></geometry>
      <surface>
        <friction>
          <ode><mu>1.0</mu><mu2>1.0</mu2></ode>
        </friction>
      </surface>
    </collision>
    <inertial>
      <mass value="2.0"/>
      <inertia ixx="0.0054" ixy="0" ixz="0" iyy="0.0054" iyz="0" izz="0.01"/>
    </inertial>
  </link>

  <joint name="right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="right_wheel"/>
    <origin xyz="0.1 -0.175 0" rpy="1.5707 0 0"/>
    <axis xyz="0 0 -1"/>
  </joint>

  <link name="left_wheel">
    <visual>
      <geometry><cylinder length="0.05" radius="0.1"/></geometry>
      <material name="white"/>
    </visual>
    <collision>
      <geometry><cylinder length="0.05" radius="0.1"/></geometry>
      <surface>
        <friction>
          <ode><mu>1.0</mu><mu2>1.0</mu2></ode>
        </friction>
      </surface>
    </collision>
    <inertial>
      <mass value="2.0"/>
      <inertia ixx="0.0054" ixy="0" ixz="0" iyy="0.0054" iyz="0" izz="0.01"/>
    </inertial>
  </link>

  <joint name="left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="left_wheel"/>
    <origin xyz="0.1 0.175 0" rpy="1.5707 0 0"/>
    <axis xyz="0 0 -1"/>
  </joint>

  <link name="caster_wheel">
    <visual>
      <geometry><sphere radius="0.05"/></geometry>
      <material name="orange"/>
    </visual>
    <collision>
      <geometry><sphere radius="0.05"/></geometry>
      <surface>
        <friction>
          <ode><mu>0.0</mu><mu2>0.0</mu2></ode>
        </friction>
      </surface>
    </collision>
    <inertial>
      <mass value="0.5"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
  </link>

  <joint name="caster_joint" type="fixed">
    <parent link="base_link"/>
    <child link="caster_wheel"/>
    <origin xyz="-0.2 0 -0.05"/>
  </joint>

  <link name="imu_link">
    <visual>
      <geometry><box size="0.05 0.05 0.02"/></geometry>
      <material name="violet"/>
    </visual>
  </link>
  <joint name="imu_joint" type="fixed">
    <parent link="base_link"/>
    <child link="imu_link"/>
    <origin xyz="0 0 0.06"/>
  </joint>

  <link name="gps_link">
    <visual>
      <geometry><cylinder radius="0.03" length="0.02"/></geometry>
      <material name="red"/>
    </visual>
  </link>
  <joint name="gps_joint" type="fixed">
    <parent link="base_link"/>
    <child link="gps_link"/>
    <origin xyz="-0.1 0 0.06"/>
  </joint>

  <gazebo reference="base_link">
    <visual><material><ambient>0 1 0 1</ambient><diffuse>0 1 0 1</diffuse></material></visual>
  </gazebo>
  <gazebo reference="right_wheel">
    <visual><material><ambient>1 1 1 1</ambient><diffuse>1 1 1 1</diffuse></material></visual>
  </gazebo>
  <gazebo reference="left_wheel">
    <visual><material><ambient>1 1 1 1</ambient><diffuse>1 1 1 1</diffuse></material></visual>
  </gazebo>
  <gazebo reference="imu_link">
    <visual><material><ambient>0.5 0 1 1</ambient><diffuse>0.5 0 1 1</diffuse></material></visual>
  </gazebo>
  <gazebo reference="gps_link">
    <visual><material><ambient>1 0 0 1</ambient><diffuse>1 0 0 1</diffuse></material></visual>
  </gazebo>

  <gazebo>
    <plugin
      filename="libgz-sim-diff-drive-system.so"
      name="gz::sim::systems::DiffDrive">
      <left_joint>left_wheel_joint</left_joint>
      <right_joint>right_wheel_joint</right_joint>
      <wheel_separation>0.35</wheel_separation>
      <wheel_radius>0.1</wheel_radius>
      <odom_publish_frequency>50</odom_publish_frequency>
      <topic>/cmd_vel</topic>
      <odom_topic>/odom</odom_topic>
      <tf_topic>/tf</tf_topic>
      <frame_id>odom</frame_id>
      <child_frame_id>base_link</child_frame_id>
    </plugin>

    <plugin
      filename="libgz-sim-imu-system.so"
      name="gz::sim::systems::Imu">
    </plugin>

    <plugin
      filename="libgz-sim-joint-state-publisher-system.so"
      name="gz::sim::systems::JointStatePublisher">
      <topic>/joint_states</topic> 
    </plugin>

    <plugin
      filename="libgz-sim-navsat-system.so"
      name="gz::sim::systems::NavSat">
    </plugin>
  </gazebo>

  <gazebo reference="imu_link">
    <sensor name="imu_sensor" type="imu">
      <always_on>1</always_on>
      <update_rate>100</update_rate>
      <visualize>true</visualize>
      <topic>/imu/data</topic>
    </sensor>
  </gazebo>

  <gazebo reference="gps_link">
    <sensor name="gps_sensor" type="navsat">
      <always_on>1</always_on>
      <update_rate>5</update_rate>
      <topic>/gps/fix</topic>
    </sensor>
  </gazebo>
</robot>